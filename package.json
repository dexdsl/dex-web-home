{
  "name": "dex-web-home",
  "private": true,
  "type": "module",
  "scripts": {
    "rewrite:anchors": "node scripts/rewrite-internal-anchors.mjs",
    "check:anchors": "node scripts/rewrite-internal-anchors.mjs --check",
    "build:breadcrumb-motion": "node scripts/build-breadcrumb-motion.mjs",
    "dex": "node scripts/dex.mjs",
    "smoke:dex-init": "node scripts/smoke-dex-init.mjs",
    "test:video": "node scripts/test-video-injection.mjs",
    "test:lifecycle": "node scripts/test-entry-lifecycle.mjs",
    "test:viewer": "node scripts/test-viewer.mjs",
    "test:portable": "node scripts/verify-portable-entry-html.mjs",
    "test:doctor": "node scripts/test-doctor-normalize.mjs && node scripts/test-doctor-drift.mjs",
    "test:update": "node scripts/test-update-rehydrate.mjs",
    "repo:discover": "node scripts/discover_repo_targets.mjs",
    "sanitize:purge": "npm run repo:discover && node scripts/purge_forbidden_traces.mjs",
    "sanitize:scan": "npm run repo:discover && node scripts/repo_purity_scan.mjs",
    "sanitize:assets": "npm run repo:discover && node scripts/fetch_legacy_cdn_images.mjs",
    "verify:no-forbidden-domains": "npm run repo:discover && node scripts/verify_no_forbidden_domains.mjs",
    "verify:no-legacy-cdn-images": "npm run repo:discover && node scripts/verify_no_legacy_cdn_images.mjs",
    "phase1:all": "npm run sanitize:scan && npm run sanitize:assets && npm run verify:no-legacy-cdn-images",
    "test:net": "playwright test tests/network-purity.spec.ts",
    "test:visual": "playwright test tests/visual.spec.ts",
    "sanitize:all": "npm run phase1:all && npm run test:net && npm run test:visual",
    "phase2:inventory": "node scripts/style_inventory.mjs",
    "phase2:states": "node scripts/style_states.mjs",
    "phase2:tokens": "node scripts/tokenize_inventory.mjs",
    "phase2:all": "npm run repo:discover && npm run phase2:inventory && npm run phase2:states && npm run phase2:tokens",
    "phase0-2:all": "npm run repo:discover && npm run sanitize:scan && npm run sanitize:assets && npm run verify:no-legacy-cdn-images && npm run phase2:all && npm run test:net && npm run test:visual"
  },
  "bin": {
    "dex": "scripts/dex.mjs"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "parse5": "^7.3.0",
    "playwright": "^1.58.2"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cheerio": "^1.0.0",
    "cli-cursor": "^5.0.0",
    "commander": "^12.1.0",
    "flubber": "0.4.2",
    "framer-motion": "12.23.24",
    "ink": "^6.8.0",
    "prompts": "^2.4.2",
    "react": "^19.2.4",
    "zod": "^3.23.8"
  }
}
