{
  "name": "dex-web-home",
  "private": true,
  "type": "module",
  "scripts": {
    "rewrite:anchors": "node scripts/rewrite-internal-anchors.mjs",
    "check:anchors": "node scripts/rewrite-internal-anchors.mjs --check",
    "build:breadcrumb-motion": "node scripts/build-breadcrumb-motion.mjs",
    "dex": "node scripts/dex.mjs",
    "smoke:dex-init": "node scripts/smoke-dex-init.mjs",
    "test:video": "node scripts/test-video-injection.mjs",
    "test:lifecycle": "node scripts/test-entry-lifecycle.mjs",
    "test:viewer": "node scripts/test-viewer.mjs",
    "test:portable": "node scripts/verify-portable-entry-html.mjs",
    "test:doctor": "node scripts/test-doctor-normalize.mjs && node scripts/test-doctor-drift.mjs",
    "test:update": "node scripts/test-update-rehydrate.mjs",
    "repo:discover": "node scripts/discover_repo_targets.mjs",
    "diag:assets": "node scripts/where_are_assets.mjs",
    "diag:legacy": "node scripts/diagnose_legacy_requests.mjs",
    "sanitize:purge": "npm run repo:discover && node scripts/purge_forbidden_traces.mjs",
    "sanitize:scan": "npm run repo:discover && node scripts/repo_purity_scan.mjs",
    "sanitize:assets": "npm run repo:discover && node scripts/fetch_legacy_cdn_images.mjs",
    "verify:no-forbidden-domains": "npm run repo:discover && node scripts/verify_no_forbidden_domains.mjs",
    "verify:no-legacy-cdn-images": "npm run repo:discover && node scripts/verify_no_legacy_cdn_images.mjs",
    "verify:no-dead-static-refs": "node scripts/verify_no_dead_static_refs.mjs",
    "verify:assets": "node scripts/linkcheck_local_assets.mjs",
    "verify:buttons": "node scripts/verify_button_primitives.mjs",
    "verify:no-sq-images": "npm run verify:no-legacy-cdn-images",
    "phase1:all": "npm run sanitize:scan && npm run sanitize:assets && npm run verify:no-legacy-cdn-images && npm run verify:no-dead-static-refs && npm run verify:assets && npm run verify:buttons",
    "styles:sync": "node scripts/sync_runtime_css.mjs",
    "test:net": "playwright test tests/network-purity.spec.ts",
    "test:net:prod": "node -e \"if(!process.env.BASE_URL){console.error('BASE_URL is required');process.exit(1)}\" && playwright test tests/network-purity-prod.spec.ts",
    "test:visual": "playwright test tests/visual.spec.ts",
    "sanitize:all": "npm run phase1:all && npm run test:net && npm run test:visual",
    "phase2:inventory": "node scripts/style_inventory.mjs",
    "phase2:states": "node scripts/style_states.mjs",
    "phase2:tokens": "node scripts/tokenize_inventory.mjs",
    "phase2:all": "npm run repo:discover && npm run phase2:inventory && npm run phase2:states && npm run phase2:tokens",
    "ref:capture": "node scripts/reference_screenshots.mjs && node scripts/reference_style_inventory.mjs && node scripts/reference_style_states.mjs",
    "ref:tokens": "node scripts/reference_tokens.mjs",
    "ref:visual": "PLAYWRIGHT_SKIP_WEBSERVER=1 LOCAL_BASE_URL=http://127.0.0.1:4173 playwright test tests/visual-reference.spec.ts",
    "baseline:from-ref": "npm run ref:capture && npm run ref:tokens && npm run ref:visual",
    "phase0-2:all": "npm run repo:discover && npm run sanitize:scan && npm run sanitize:assets && npm run verify:no-legacy-cdn-images && npm run verify:no-dead-static-refs && npm run verify:assets && npm run phase2:all && npm run test:net && npm run test:visual"
  },
  "bin": {
    "dex": "scripts/dex.mjs"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "parse5": "^7.3.0",
    "playwright": "^1.58.2"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.16.0",
    "@fontsource/courier-prime": "^5.2.8",
    "chalk": "^5.6.2",
    "cheerio": "^1.0.0",
    "cli-cursor": "^5.0.0",
    "commander": "^12.1.0",
    "flubber": "0.4.2",
    "framer-motion": "12.23.24",
    "ink": "^6.8.0",
    "prompts": "^2.4.2",
    "react": "^19.2.4",
    "zod": "^3.23.8"
  }
}
